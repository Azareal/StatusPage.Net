@{
    ViewData["Title"] = "Config";
}
<div class="page-title">
    <div class="title_left">
        <h3>Configuration</h3>
    </div>

    <div class="title_right">
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Settings
            </div>
            <div class="panel-body">
                @*<p class="col-lg-8 col-lg-offset-2">
                    Settings for managing how visitor data is tracked and stored. Change these to assign settings such as visit(session) length, etc.
                </p>*@
                <div class="clearfix"></div>
                <form class="form-horizontal">
                    <div class="form-group">
                        <label class="col-lg-1 col-lg-offset-1 control-label">Site Name</label>
                        <div class="col-lg-8">
                            <input class="form-control" type="text"/>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-1 col-lg-offset-1 control-label">Logo</label>
                        <div class="col-lg-8">
                            <input class="form-control" type="file" />
                        </div>
                    </div>

                    <div>
                        <button class="btn btn-primary pull-right" type="submit">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>